{
  "permissions": {
    "allow": [
      "Bash(bun:*)",
      "Bash(bun install)",
      "Bash(bun dev)",
      "Bash(bun run build)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
